{
  "compilerOptions": {
    /* Docs: https://www.typescriptlang.org/tsconfig */ "target": "es2020",
    "module": "es2020",
    "outDir": ".",
    "rootDir": ".",
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "checkJs": false,
    "allowJs": false,
    "moduleResolution": "node",
    "types": ["node"],
    "lib": ["es7"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "sourceMap": true,
    "allowUnreachableCode": true,
    "useUnknownInCatchVariables": false, // TypeScript 4.4+ only!
    "composite": true  // required on the dependency project for references to work
  },
  "files": [         // by whitelisting the files to include, TS won't automatically
    "package.json"   // include all source below root, which is the default.
  ],
  "exclude": ["node_modules", "<node_internals>/**"]
}
